     <!-- HOME -->
     <section id="home">
        <div class="row">

                    <div class="owl-carousel owl-theme home-slider">
                         <div class="item item-first">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>Parking</h1>
                                             <h3>that adjusts to preference.</h3>
                                             <a href="#options" class="section-btn btn btn-default smoothScroll">Reserve now</a>
                                        </div>
                                   </div>
                              </div>
                         </div>

                         <div class="item item-second">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>Service</h1>
                                             <h3>with all the comforts.</h3>
                                             <a href="#options" class="section-btn btn btn-default smoothScroll">Reserve now</a>
                                        </div>
                                   </div>
                              </div>
                         </div>

                         <div class="item item-third">
                              <div class="caption">
                                   <div class="container">
                                        <div class="col-md-6 col-sm-12">
                                             <h1>High security</h1>
                                             <h3>in all our parking lots.</h3>
                                             <a href="#options" class="section-btn btn btn-default smoothScroll">Reserve now</a>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
          </div>
     </section>

     <!-- Modal SIGN IN -->
     <div class="modal fade" id="modalClientSignIn" role="dialog" aria-hidden="true" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header" >
                                    <h3 id="myModalLabel">SIGN IN</h3>
                                </div> 

                                <!-- Modal Body -->

                                
                                   <div class="modal-body">
                                        <form action="" id="formSignIn">
                                             <div class="form-group">
                                                <label>Username</label>
                                                <input type="text" name="name" id="name" class="form-control" required="">
                                             </div>
                                             <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" name="password" id="password" class="form-control" required="">
                                             </div>
                                         
                                        </form>
                                   </div>

                                <!-- Modal Footer-->

                                 <div class="modal-footer">
                                     <button type="submit" class="btn btn-success" onsubmit="" id="">Sign In</button>
                                     <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                 </div>

                            </div>
                        </div> 
                    </div>
                    <!-- Modal SIGN IN -->

     <!-- Modal SIGN UP -->
     <div class="modal fade" id="modalClient" role="dialog" aria-hidden="true" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header" >
                                    <h3 id="myModalLabel">SIGN UP</h3>
                                </div> 

                                <!-- Modal Body -->

                                
                                   <div class="modal-body">
                                        <form action="" id="formSignUp">
                                             <div class="form-group">
                                                <label>Full Name</label>
                                                <input type="text" name="nameClient" id="nameClient" class="form-control" required="">
                                             </div>
                                             <div class="form-group">
                                                <label>Email</label>
                                                <input type="email" name="emailClient" id="emailClient" class="form-control" required="">
                                             </div>
                                             <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" name="passwordClient" id="passwordClient" class="form-control" required="">
                                             </div>
                                             
                                        </form>
                                   </div>

                                <!-- Modal Footer-->

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success" onsubmit="" id="">Sign Up</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                </div>

                            </div>
                        </div> 
                    </div>
                    <!-- Modal SIGN UP -->

    <!-- OPTIONS -->
     <section id="options">
